<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="doses-form">

        <%= simple_form_for [ @cocktail, @dose ] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <br>
          <%= f.submit "Submit dose", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
  </div>
</div>


