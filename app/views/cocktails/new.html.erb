<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="cocktail-form">

        <%= simple_form_for(@cocktail) do |f| %>
          Name of your cocktail:
          <%= f.text_field :name %>
          <%= f.input :photo, as: :file %>
          <%= f.submit %>
        <% end %>

        <br>

          <div class="text-center">
            <%= link_to "Back to our list of tasty cocktails!", cocktails_path %>
          </div>

      </div>
    </div>
  </div>
</div>


