<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <div class="ingredient-form">

        <%= simple_form_for  (@ingredient) do |f| %>
          Enter your ingredient:
          <%= f.text_field :name %>
          <div class="text-center">
            <br>
          <%= f.submit "Submit ingredient", class: "btn btn-primary" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
